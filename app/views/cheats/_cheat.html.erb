<div class='cheat'>
  <div class='category'>
    <% unless cheat.id != 1 && Cheat.find(cheat.id-1).category == cheat.category %>
    <h3>
    <%= cheat.category %>
    </h3>
  <% end %>
  </div>

  <div class='cheat-term'>
    <div class='cheat-title'>
      <p>
      <%= cheat.term %>
      </p>
    </div>
    <div class='cheat-description flex-between'>
      <p>
      <%= cheat.description %>
      </p>
      <div class='navigation-link cheat-action'>
        <% if current_user?(@cheatsheet.user) %>
          <%= link_to 'Delete', [cheat.cheatsheet, cheat],
            method: :delete,
            data: { confirm: 'Are you sure?' }, class: 'small-pill-link' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
