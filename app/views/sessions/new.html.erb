<div class='margins'>
  <h1>Log In</h1>
    <%= form_for(:session, url: login_path) do |f| %>

  <div class='labels flex-center'>
      <div class='form-field'>
      <%= f.label :email %>
      <%= f.email_field :email, class: 'text-field' %>
      <br>
      </div>

      <div class='form-field'>
      <%= f.label :password %>
      <%= link_to "(forgot password)", new_password_reset_path, class: 'smaller-text' %>
      <%= f.password_field :password, class: 'text-field' %>
      <br>
      </div>

      <div class='form-field'>
      <%= f.label :remember_me do %>
        <%= f.check_box :remember_me %>
        <span class='smaller-text'>Remember me on this computer</span>
      <% end %>
      </div>

      <div class='form-field submit'>
      <%= f.submit :value => 'Login' %>
      </div>
    <% end %>
  </div>
</div>
