<% if @user.errors.any? %>
  <div id="error_explanation" class='message danger-message'>
    <div>
      <h2>
        The form contains <%= pluralize(@user.errors.count, "error") %>
      </h2>.
    </div>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
