<div class='cheatsheet-title card'>
  <h3><%= cheatsheet.title %></h3>
</div>
<div class='cheatsheet-description card'>
  <h3><%= cheatsheet.description %></h3>
</div>
<div class='cheatsheet-action navigation-link card'>
  <div class='action-links'>
  <%= link_to 'Show', cheatsheet_path(cheatsheet), { :class => 'small-pill-link' } %>
  <% if current_user %>
    <%= link_to 'Clone', cheatsheet_clone_path(cheatsheet), { :class => 'small-pill-link' } %>
  <% end %>
  <% if current_user?(cheatsheet.user) %>
    <%= link_to 'Edit', edit_cheatsheet_path(cheatsheet), { :class => 'small-pill-link' } %>
    <%= link_to 'Destroy', cheatsheet_path(cheatsheet),
      method: :delete,
      data: { confirm: 'Are you sure?' }, class: 'small-pill-link' %>
  <% end %>
  </div>
</div>
