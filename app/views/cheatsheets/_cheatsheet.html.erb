<p> Title: <%= cheatsheet.title %> </p>
<p> Description: <%= cheatsheet.description %> </p>

<%= link_to 'Show', cheatsheet_path(cheatsheet) %>
<% if current_user %>
  <%= link_to 'Clone', cheatsheet_clone_path(cheatsheet) %>
<% end %>
<% if current_user?(cheatsheet.user) %>
<%= link_to 'Edit', edit_cheatsheet_path(cheatsheet) %>
<%= link_to 'Destroy', cheatsheet_path(cheatsheet),
  method: :delete,
  data: { confirm: 'Are you sure?' } %>
<% end %>

