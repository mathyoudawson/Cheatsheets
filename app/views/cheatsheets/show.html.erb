
<h1>Cheatsheet</h1>
<p>
  <strong>Title:</strong>
    <%= @cheatsheet.title %>
</p>

<p>
<strong>Description:</strong>
<%= @cheatsheet.description %>
</p>

<h2>Cheats</h2>
<%= render @cheatsheet.cheats %>

<% if current_user?(@cheatsheet.user) %>
  <h2>Add a cheat:</h2>
  <%= render 'cheats/form' %>

  <%= link_to 'Edit', edit_cheatsheet_path %>
  <%= link_to 'Destroy', cheatsheet_path(@cheatsheet),
    method: :delete,
    data: { confirm: 'Are you sure?' } %>
<% end %>
<%= link_to 'Back', cheatsheets_path %>
